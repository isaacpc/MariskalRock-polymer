<?xml version='1.0' encoding='utf-8'?>
<widget id="com.isaacpc.mariskalrock" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>MariskalRock</name>
  <description>
    A sample Apache Cordova application that responds to the deviceready event.
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
    Apache Cordova Team
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <!-- <gap:plugin name="cordova-plugin-socialsharing" source="npm" /> -->
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <!-- app icons-->
    <icon src="www/images/cordova/res/icons/android/icon-192-xxxhdpi.png" density="xxxhdpi" />
    <icon src="www/images/cordova/res/icons/android/icon-144-xxhdpi.png" density="xxhdpi" />
    <icon src="www/images/cordova/res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
    <icon src="www/images/cordova/res/icons/android/icon-72-hdpi.png" density="hdpi" />
    <icon src="www/images/cordova/res/icons/android/icon-48-mdpi.png" density="mdpi" />
    <icon src="www/images/cordova/res/icons/android/icon-36-ldpi.png" density="ldpi" />
    <!-- splash configuration -->
    <splash src="www/images/cordova/res/screens/android/screen-hdpi-portrait.png" density="port-hdpi"/>
    <splash src="www/images/cordova/res/screens/android/screen-ldpi-portrait.png" density="port-ldpi"/>
    <splash src="www/images/cordova/res/screens/android/screen-mdpi-portrait.png" density="port-mdpi"/>
    <splash src="www/images/cordova/res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi"/>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    
    <allow-intent href="market:*" />
    <feature name="SocialSharing">
      <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <feature name="SocialSharing">
      <param name="ios-package" value="SocialSharing" />
    </feature>
  </platform>
  <platform name="windows">
    <feature name="SocialSharing">
      <param name="wp-package" value="SocialSharing"/>
    </feature>
  </platform>
</widget>
